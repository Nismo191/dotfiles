set nocompatible

filetype on

filetype plugin on

filetype indent on

syntax on

set relativenumber

set cursorline
"set cursorcolumn

set tabstop=4

set ignorecase
set smartcase

set showcmd
set showmode

set showmatch
set hlsearch

"Autocomplete
set wildmenu
set wildmode=list:longest

"Status Line
set statusline=

set statusline+=\ %F\ %M\ %Y\ %R

set statusline+=%=

set statusline+=\ ascii:\ %b\ hex:\ 0x%b\ row:\ %l\ col:\ %c\ percent:\ %p%%

set laststatus=2


